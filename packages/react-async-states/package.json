{
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "author": "incepter",
  "sideEffects": false,
  "version": "0.2.0.beta-1",
  "name": "react-async-states",
  "repository": "incepter/react-async-states",
  "description": "A hooks-based lightweight React library for state management",
  "engines": {
    "npm": ">=5",
    "node": ">=8"
  },
  "keywords": [
    "react",
    "state",
    "async",
    "promise",
    "generator",
    "management",
    "async-state",
    "react-async-state",
    "react-async-states"
  ],
  "files": [
    "dist/*",
    "README.MD"
  ],
  "scripts": {
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "clean:dist": "rimraf dist",
    "build": "rimraf dist && cross-env webpack --config ./webpack/webpack.prod.config.js --color --progress",
    "start": "rimraf dist && cross-env NODE_ENV=development webpack --watch --config ./webpack/webpack.dev.config.js --color --progress --mode development",
    "prepare": "yarn run build",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.2 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.3",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^27.4.0",
    "circular-dependency-plugin": "^5.2.2",
    "compression-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.0.4",
    "cross-env": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "gh-pages": "^2.0.1",
    "react-scripts": "4.0.3",
    "react-test-renderer": "^16.9.0",
    "source-map-loader": "1.1.3",
    "terser-webpack-plugin": "2.2.1",
    "ts-loader": "8.2.0",
    "typescript": "^4.5.4",
    "webpack": "4.44.2",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "3.3.10",
    "webpack-hot-middleware": "2.25.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "__tests__",
      "index-prod.js",
      "type*.ts"
    ],
    "testMatch": [
      "**/*.test.js",
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  }
}
