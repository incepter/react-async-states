{
  "private": false,
  "license": "MIT",
  "author": "incepter",
  "sideEffects": false,
  "version": "1.0.0-rc-7",
  "module": "dist/index",
  "main": "dist/umd/index",
  "name": "react-async-states",
  "types": "dist/react-async-states/src/index",
  "repository": "https://github.com/incepter/react-async-states",
  "description": "A low-level multi paradigm state management library",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:cov": "cross-env CI=1 react-scripts test --env=jsdom --coverage",
    "test:watch": "react-scripts test --env=jsdom",
    "clean:dist": "rimraf dist",
    "start": "pnpm dev",
    "prebuild": "rimraf dist",
    "build": "pnpm clean:dist && rollup -c rollup/rollup.config.js",
    "dev": "pnpm clean:dist && rollup -c rollup/rollup.config.dev.js -w"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.2 || ^18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.2.1",
    "circular-dependency-plugin": "^5.2.2",
    "cross-env": "^7.0.3",
    "devtools": "workspace:*",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "react-scripts": "5.0.1",
    "react-test-renderer": "18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-gzip": "3.0.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.34.1",
    "shared": "workspace:*",
    "tslib": "^2.4.1",
    "typescript": "^4.6.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "__tests__",
      "index-prod.js",
      "configuration-warn",
      "type*.ts"
    ],
    "testMatch": [
      "**/*.test.js",
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  },
  "engines": {
    "npm": ">=5",
    "node": ">=8"
  },
  "keywords": [
    "react",
    "state",
    "async",
    "promise",
    "generator",
    "management",
    "async-state",
    "react-async-state",
    "react-async-states"
  ],
  "files": [
    "dist/*",
    "README.MD"
  ]
}
